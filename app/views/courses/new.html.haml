.container
  .row
    .col.s12
      %h3 Add A Course

  =form_for @course do |f|
    .row
      .input-field.col.s12
        =f.text_field :name
        =f.label :name

    .row
      .input-field.col.s6
        =f.text_field :city
        =f.label :city

      .input-field.col.s6
        =f.text_field :state
        =f.label :state

    .row
      .col.s12
        =submit_tag "Save Course", class: 'btn'
