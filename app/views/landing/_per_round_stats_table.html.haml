.row
  .col.s12
    %h4 Per Round Statistics
.row
  .col.s12
    %table.striped.centered
      %thead
        %tr
          -@per_round_statistics.each do |stat|
            %th
              -if stat.include?('fir') || stat.include?('gir')
                %span=display_regulation_stat(stat)
              -else
                %span=stat.humanize.titleize
      %tbody
        -@per_round_summary.each do |round_stats|
          %tr
            -@per_round_statistics.each do |stat|
              %td
                -if stat.include?('%') || stat.include?('fir') || stat.include?('gir')
                  %span=number_to_percentage(round_stats[stat.to_sym], precision: 2)
                -else
                  %span=round_stats[stat.to_sym]
